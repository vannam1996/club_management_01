<div id="modal-edit-album" class="modal fade" tabindex="-1"
  role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h5 class="modal-title">
          <i class="fa fa-camera"></i> <%= t "edit" %>
        </h5>
      </div>
      <div class="modal-body form-album">
        <%= form_for [@club, @album], remote: :true,
          html: {multipart: true, enctype: "multipart/form-data",
          class: "form-horizontal form-bordered"} do |f| %>
          <%= f.hidden_field :club_id, value: @club.id %>
          <fieldset>
            <div class="album-errors"></div>
            <div class="form-group">
              <label class="col-md-3 control-label"><%= t "name" %></label>
              <div class="col-md-12 edit-album">
                <%= f.text_field :name, placeholder: t("club_manager.album.name_holder"), class: "form-control input-edit" %>
              </div>
            </div>
          </fieldset>
          <div class="modal-footer col-xs-12 text-right">
            <%= f.button t("close"), class: "btn btn-sm btn-warning","data-dismiss": "modal" %>
            <%= f.button t("save"), class: "btn btn-sm btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
