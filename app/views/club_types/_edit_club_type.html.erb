<td class= "text-center type-name type-<%= club_type.id %>">
  <div class="form-group edit-type-club margin-bottom-0">
    <%= hidden_field_tag :organization_slug, @organization.slug %>
    <%= text_field_tag :name, club_type.name, required: true,
      class: "form-control input-text text-center" %>
    <div id="errors-edit"></div>
  </div>
</td>
<td class="text-center">
  <%= l club_type.created_at, format: :short %>
</td>
<td class="text-center">
  <%= club_type.clubs.size %>
</td>
<td class="text-center">
  <%= button_tag "", title: t("save_chage_type"), value: club_type.id, id: "save-club-type",
    class: "btn btn-breez btn-bottom-0" do %>
    <i class="fa fa-save"></i>
  <% end %>
  <%= link_to organization_club_type_path(@organization), title: t("undo"), remote: true,
    class: "btn btn-danger btn-bottom-0" do %>
    <i class="fa fa-undo"></i>
  <% end %>
</td>
<%= javascript_include_tag "edit_club_type" %>
