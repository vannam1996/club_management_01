<div class="col-md-12 col-md-offset-2">
  <div class="modal-dialog edit-club modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div class="block">
          <div class="row edit-organization">
            <h2 class="text-center col-md-12"><%= @club.name %></h2>
            <div class="col-md-12 col-md-offset-1">
              <%= form_for @club, url: dashboard_club_path(@club, tab: "plan"),
                remote: :true, html: {multipart: true} do |f| %>
                <div class="album-errors"></div>
                <div class="form-group col-md-12">
                  <%= f.label(:plan, class: "control-label") do %>
                    <%= t "plan" %>
                  <% end %>
                  <%= f.cktext_area :plan, class: "form-control input-text" %>
                </div>
                <div class="form-group col-md-12">
                  <%= f.label(:local, class: "control-label") do %>
                    <%= t "activities_connect" %>
                  <% end %>
                  <%= f.cktext_area :activities_connect, class: "form-control input-text" %>
                </div>
                <div class="form-group col-md-12">
                  <%= f.label(:local, class: "control-label") do %>
                    <%= t "local_club" %>
                  <% end %>
                  <%= f.cktext_area :local, class: "form-control input-text" %>
                </div>
                <div class="form-group">
                  <p><label for="contact-message"><%= t "time_club" %></label></p>
                  <div class="days-selector row">
                    <% for day in I18n.t("date.day_names") %>
                      <%= check_box_tag "club[time_activity][]",
                        day, check_date_club(@club.time_activity, day), class: "col-md-1 col-xs-1 col-sm-1" %>
                      <label><%= day %></label>
                    <% end %>
                  </div>
                </div>
                <div class="text-center col-md-12">
                  <%= f.submit t("update"), class: "btn btn-primary col-md-2 btn-sm" %>
                  <%= f.button t("close"), class: "btn btn-sm btn-warning",
                    "data-dismiss": "modal" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
