<% if @report_category.errors.any? %>
  $('#new-category').html('<%= j render partial: "form_new",
    locals: {report_category: @report_category} %>')
  $('#error-explanation-category').html('<%= j render partial: "shared/error_messages",
    locals: {object: @report_category} %>')
<% else %>
  $('#organization_club').html('<%= j render partial: "list_report_categories",
    locals: {report_categories: @report_categories} %>');
  $('#new-category').collapse("show")
  $('.container').append('<%= j render partial: "shared/flash_warning" %>');
  $('.notify').delay(4000).slideUp(300);
<% end %>
