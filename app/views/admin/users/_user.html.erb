<tr class="user-<%= user.id %>">
  <td class="text-center"><%= user.id %></td>
  <td>
    <%= image_tag user.avatar, class: "avt-small" %>&nbsp&nbsp
    <%= user.full_name %></a>
  </td>
  <td><%= user.email %></td>
  <td>
    <% if user.organizations.blank? %>
      <%= t "none" %>
    <% else %>
      <% user.organizations.each do |organization| %>
        <%= organization.name %><br>
      <% end %>
    <% end %>
  </td>
  <td class="text-center">
    <div class="btn-group btn-group-xs">
      <%= link_to admin_user_path(user), remote: true,
        class: "btn btn-primary" do %>
        <i class="fa fa-eye"></i>
      <% end %>
      <%= link_to edit_admin_user_path(user), remote: true,
        class: "btn btn-default" do %>
        <i class="fa fa-pencil"></i>
      <% end %>
      <%= link_to admin_user_path(user), remote: true, method: :delete,
        data: {confirm: t("admin_manage.confirm_del")},
        class: "btn btn-danger" do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>
  </td>
</tr>
