<div id="sidebar">
  <div id="sidebar-scroll">
    <div class="sidebar-content">
      <%= link_to admin_path, class: "sidebar-brand" do %>
        <span class="sidebar-nav-mini-hide">
          <strong class="padding_left_after_login">
            <%= t "dashboard" %>
          </strong>
        </span>
      <% end %>
      <div class="sidebar-section sidebar-user clearfix sidebar-nav-mini-hide">
        <div class="sidebar-user-avatar">
          <%= link_to admin_users_path(current_admin) do %>
            <%= image_tag current_admin.avatar %>
          <% end %>
        </div>
        <div class="sidebar-user-name"><%= current_admin.full_name %></div>
        <div class="sidebar-user-links">
          <%= link_to admin_user_path(current_admin), title: t("profile") do %>
            <i class="fa fa-user"></i></a>
          <% end %>
          <%= link_to "#", title: t("setting") do %>
            <i class="fa fa-envelope"></i></a>
          <% end %>
          <%= link_to "#", title: t("setting") do %>
            <i class="fa fa-cog"></i></a>
          <% end %>
          <%= link_to destroy_admin_session_path(current_admin), method: :delete, title: t("logout") do %>
            <i class="fa fa-sign-out"></i></a>
          <% end %>
        </div>
      </div>
      <ul class="sidebar-nav">
        <li class="sidebar-header">
          <span class="sidebar-header-title"><%= t "admin_page" %></span>
        </li>
        <li>
          <%= link_to admin_path do %>
            <i class="gi gi-leaf sidebar-nav-icon"></i>
            <span class="sidebar-nav-mini-hide"><%= t "dashboard" %></span></a>
          <% end %>
        </li>
        <li>
          <%= link_to admin_users_path do %>
            <i class="gi gi-user sidebar-nav-icon"></i>
            <span class="sidebar-nav-mini-hide"><%= t "users" %></span></a>
          <% end %>
        </li>
        <li>
          <%= link_to admin_organization_requests_path do %>
            <i class="gi gi-check sidebar-nav-icon"></i>
            <span class="sidebar-nav-mini-hide">
              <%= t "organization_request" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_feed_backs_path do %>
            <i class="fa fa-search sidebar-nav-icon"></i>
            <span class="sidebar-nav-mini-hide">
              <%= t "view" %> <%= t "feed_back" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to t("do_nothing"), class: "sidebar-nav-menu" do %>
            <i class="fa fa-angle-left sidebar-nav-indicator sidebar-nav-mini-hide"></i>
            <i class="gi gi-building sidebar-nav-icon"></i>
            <span class="sidebar-nav-mini-hide"><%= t "organizations.organization" %></span></a>
          <% end %>
          <ul>
            <li>
              <%= link_to t("list_organizations"), admin_organizations_path %>
            </li>
            <li>
              <%= link_to t("new_organizations"), new_admin_organization_path %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</div>
